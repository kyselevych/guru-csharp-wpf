<Window x:Class="GuruCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuruCSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="950">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Background="Blue" Grid.Row="0">
            <TextBlock FontSize="18" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="30 0 0 0">
                Guru CSharp
            </TextBlock>
        </StackPanel>
        <Frame x:Name="Main" Grid.Row="1" VerticalAlignment="Top" Padding="30" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
