<Page x:Class="GuruCSharp.Pages.SectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GuruCSharp.Pages"
      mc:Ignorable="d"
      Title="Section" Height="500" Width="870">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlock">
            
        </TextBlock>
        <ProgressBar Minimum="0" Maximum="100" Height="12" Value="35" Margin="0 0 50 0" Grid.Row="1" Grid.Column="0"/>
        <Button Grid.Row="1" Grid.Column="1" Height="30" Click="ButtonNext_OnClick">Next</Button>
    </Grid>
</Page>